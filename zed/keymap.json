[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-p": [
        "task::Spawn",
        {
          "task_name": "find-in-files",
          "reveal_target": "center",
        },
      ],
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {},
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "H": "pane::ActivatePreviousItem",
      "L": "pane::ActivateNextItem",
      "space b o": "pane::CloseOtherItems",
      ": d": [
        "task::Spawn",
        {
          "task_name": "doc",
          "reveal_target": "center",
        },
      ],
      ": t": [
        "task::Spawn",
        {
          "task_name": "tldr",
          "reveal_target": "center",
        },
      ],
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
    },
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "ctrl-d": ["workspace::SendKeystrokes", "ctrl-d z z"],
      "ctrl-u": ["workspace::SendKeystrokes", "ctrl-u z z"],
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-k": "workspace::ActivatePaneUp",
    },
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-l": "workspace::ActivateNextPane",
    },
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "J": "editor::MoveLineDown",
      "K": "editor::MoveLineUp",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-space": "editor::ToggleSelectionMenu",
    },
  },
]
