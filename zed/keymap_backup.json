[
  {
    "context": "Workspace",
    "bindings": {
      "cmd-p": [
        "task::Spawn",
        {
          "task_name": "find-in-files",
          "reveal_target": "center",
        },
      ],
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {},
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "H": "pane::ActivatePreviousItem",
      "L": "pane::ActivateNextItem",
      "space b o": "pane::CloseOtherItems",
      ": d": [
        "task::Spawn",
        {
          "task_name": "doc",
          "reveal_target": "center",
        },
      ],
      ": t": [
        "task::Spawn",
        {
          "task_name": "tldr",
          "reveal_target": "center",
        },
      ],
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-u": ["vim::ScrollUp", "editor::ScrollCursorCenter"],
      "ctrl-d": ["vim::ScrollDown", "editor::ScrollCursorCenter"],
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
    },
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-l": "workspace::ActivateNextPane",
    },
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "J": "editor::MoveLineDown",
      "K": "editor::MoveLineUp",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-space": "editor::ToggleSelectionMenu",
    },
  },
]
