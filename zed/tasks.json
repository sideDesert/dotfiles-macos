    "show_summary": true,
    "show_command": true,
  },
  {
    "label": "find-in-files",
    "command": "zed \"$(tv files)\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "zsh",
        "args": ["--no-rcs"],
      },
    },
  },
  {
    "label": "doc",
    "command": "man $(man -k . | tv | awk -F'[()]' '{print $2, $1}')",

    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "zsh",
        "args": ["-i", "-c"],
      },
    },
  },
  {
    "label": "tldr",
    "command": "tldr $(tldr --list | awk 'NR>2' | tv) | less",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "zsh",
        "args": ["-i", "-c"],
      },
    },
  },
